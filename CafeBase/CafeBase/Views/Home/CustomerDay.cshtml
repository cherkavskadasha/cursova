@model IEnumerable<CafeBase.Models.Customer>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customers for Today</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <div class="container">
        <h1 class="text-center">Відвідувачі за сьогоднішній день</h1>

        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered table-striped table-hover mt-4">
                <thead class="thead-dark">
                    <tr>
                        <th>Ім'я</th>
                        <th>Телефон</th>
                        <th>Електронна адреса</th>
                        <th>День реєстрації</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Name</td>
                            <td>@order.Phone</td>
                            <td>@order.Email</td>
                            <td>@order.RegistrationDate</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Халепа... немає відвідувачів за сьогодні :(</p>
        }
    </div>

    <style>
        .thead-dark {
            background-color: rgba(86, 127, 125, 1);
            color: #fff;
        }

        table {
            margin-top: 20px;
        }
    </style>
</body>
</html>
