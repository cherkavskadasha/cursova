@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 title">Вітаємо в кав'ярні!</h1>
    <h2 class="display-5 titlee">Статистика:</h2>
    <div class="links">
        <a asp-action="OrderDay" class="link">Замовлення за день</a>
        <a asp-action="CustomerDay" class="link">Відвідувачі за день</a>
        <a asp-action="PaymentDay" class="link">Виручка за день</a>
    </div>
</div>

<style>

    /* Контейнер */
    .text-center {
        text-align: center;
    }

    /* Заголовок */
    .title {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .titlee {
        font-size: 2rem;
        font-weight: bold;
        color: rgba(86, 127, 125, 1);
        margin-bottom: 20px;
    }

    /* Блок посилань */
    .links {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
    }

    /* Посилання */
    .link {
        font-size: 1.2rem;
        text-decoration: none;
        color: rgba(86, 127, 125, 1);
        border: 2px solid rgba(86, 127, 125, 1);
        padding: 10px 20px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .link:hover {
            background-color: rgba(86, 127, 125, 1);
            color: white;
            transform: scale(1.05);
    }
</style>