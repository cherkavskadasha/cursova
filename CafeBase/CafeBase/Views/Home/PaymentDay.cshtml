@model IEnumerable<CafeBase.Models.Payment>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payments for Today</title>
    <link rel="stylesheet" href="~/css/styles.css"> <!-- If there's a CSS file -->
</head>
<body>
    <div class="container">
        <h1 class="text-center">Оплати за сьогоднішній день</h1>

        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered table-striped table-hover mt-4">
                <thead class="thead-dark">
                    <tr>
                        <th>Дата оплати</th>
                        <th>Сума оплати</th>
                        <th>Метод оплати</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pay in Model)
                    {
                        <tr>
                            <td>@pay.PaymentDate</td>
                            <td>@pay.AmountPaid</td>
                            <td>@pay.PaymentMethod</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="total mt-4">
                <h3>
                    Загальна сума оплати:
                    @Model.Sum(p => p.AmountPaid)
                </h3>
            </div>
        }
        else
        {
            <p>Халепа... немає оплат за сьогодні :(</p>
        }
    </div>

    <style>
        .thead-dark {
            background-color: rgba(86, 127, 125, 1);
            color: #fff;
        }

        table {
            margin-top: 20px;
        }

        .total h3 {
            color: rgba(86, 127, 125, 1);
        }
    </style>
</body>
</html>
