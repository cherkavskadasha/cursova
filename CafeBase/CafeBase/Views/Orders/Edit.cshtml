@model CafeBase.Models.Order

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1 class="page-title">Змінити</h1>
    <h4 class="menu-header">Замовлення</h4>
    <div class="form-container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control input-large" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control input-large" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalAmount" class="control-label"></label>
                <input type="number" step="0.01" asp-for="TotalAmount" class="form-control input-large" />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>
            <div class="button-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Повернутись</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .page-title {
        color: rgba(86, 127, 125, 1);
        font-size: 32px;
        font-weight: bold;
    }

    .menu-header {
        font-size: 24px;
        font-weight: 600;
        margin-top: 10px;
    }

    .form-control.input-large {
        font-size: 16px;
        height: 45px;
        width: 40%;
        padding: 10px;
        box-sizing: border-box;
    }

    .button-group {
        display: flex;
        justify-content: flex-start;
        gap: 10px;
        margin-top: 20px;
    }

    .btn {
        font-size: 16px;
        border-radius: 5px;
        padding: 10px 20px;
        text-decoration: none;
        color: #fff;
    }

    .btn-primary {
        background-color: rgba(86, 127, 125, 1);
        border: none;
    }

        .btn-primary:hover {
            background-color: rgba(70, 105, 104, 1);
        }

    .btn-secondary {
        background-color: #6c757d;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>
