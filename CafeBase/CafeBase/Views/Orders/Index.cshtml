@model IEnumerable<CafeBase.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1 class="text-center">Замовлення</h1>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary text-center">Cтворити нове замовлення</a>
</div>
<form method="post" class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="TotalAmount">Знайти по сумі замовлення::</label>
                <input type="number" step="0.01" id="TotalAmount" name="TotalAmount" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Customer" class="control-label">Знайти по імені відвідувача: </label>
                <input type="text" id="Customer" name="Customer" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="OrderDate">Знайти по даті замовлення:</label>
                <input type="date" id="OrderDate" name="OrderDate" class="form-control" />
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Знайти</button>
        </div>
    </div>
</form>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Дата замовлення:</th>
            <th>Сума замовлення:</th>
            <th>Ім'я відвідувача:</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalAmount)</td>
                <td>@Html.DisplayFor(modelItem => item.Customer.Name)</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-sm btn-warning">Змінити</a>
                    <!-- <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-info">Details</a> -->
                    <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-sm btn-danger">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .btn-primary {
        background-color: rgba(86, 127, 125, 1);
        border: none;
    }

        .btn-primary:hover {
            background-color: #6c847d;
        }

    .btn-warning {
        background-color: rgba(86, 127, 125, 1);
        color: #ffffff;
        border: none;
    }

        .btn-warning:hover {
            background-color: #6c847d;
        }

    .btn-danger {
        background-color: rgba(118, 82, 82, 1);
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }
</style>

