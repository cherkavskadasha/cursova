@model IEnumerable<CafeBase.Models.Payment>

@{
    ViewData["Title"] = "Payments";
}

<h1 class="text-center">Оплати</h1>

<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Створити нову оплату</a>
</div>

<form method="post" class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="AmountPaid">Знайти по сумі оплати:</label>
                <input type="number" step="0.01" id="AmountPaid" name="AmountPaid" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Order" class="control-label">Знайти по ID замовлення: </label>
                <input type="text" id="Order" name="Order" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="PaymentDate">Знайти по даті замовлення:</label>
                <input type="date" id="PaymentDate" name="PaymentDate" class="form-control" />
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.PaymentDate)</th>
            <th>@Html.DisplayNameFor(model => model.AmountPaid)</th>
            <th>@Html.DisplayNameFor(model => model.PaymentMethod)</th>
            <th>@Html.DisplayNameFor(model => model.Order)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.PaymentDate)</td>
                <td>@Html.DisplayFor(modelItem => item.AmountPaid)</td>
                <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                <td>@Html.DisplayFor(modelItem => item.Order.OrderId)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PaymentId" class="btn btn-sm btn-warning">Edit</a>
                    <!-- <a asp-action="Details" asp-route-id="@item.PaymentId" class="btn btn-sm btn-info">Details</a> -->
                    <a asp-action="Delete" asp-route-id="@item.PaymentId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .btn-primary {
        background-color: rgba(86, 127, 125, 1);
        border: none;
    }

        .btn-primary:hover {
            background-color: #6c847d;
        }

    .btn-warning {
        background-color: rgba(86, 127, 125, 1);
        color: #ffffff;
        border: none;
    }

        .btn-warning:hover {
            background-color: #6c847d;
        }

    .btn-danger {
        background-color: rgba(118, 82, 82, 1);
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }
</style>
